@{
    ViewData["Title"] = "Home Page";

}
@model YoYoTestDemo.ViewModel.HomeViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h1 class="display-4">WELCOME TO <br /> YO-YO-TEST</h1>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <div class="text-center">
                <button id="playBtn" onclick="start();" type="button" class="btn btn-primary rounded-pill">Start</button> &nbsp;
                <button id="playBtn" onclick="stop();" type="button" class="btn btn-primary rounded-pill">Stop</button>
                <h3 id="timer" class="">Time 00:00</h3>
                <h3 class="">Progress, Level, Speed </h3>
            </div>
        </div>
    </div>
    <br />
    <div class="row text-center">
        <div class="col">
            <p>Next Shuttle</p>
        </div>
        <div class="col">
            <p>Total Time</p>

        </div>
        <div class="col">
            <p>Total Distance</p>

        </div>
    </div>

    <br />
    <div class="row">
        <div class="col">
            <p>Participants </p>
            <hr />
        </div>
    </div>
    @foreach (var item in Model.players)
    {
        <div class="row">
            <div class="col-8">
                @item.name
            </div>
            <div class="col-2">
                Warn
            </div>
            <div class="col-2">
                Stop
            </div>
        </div>
    }

</div>



