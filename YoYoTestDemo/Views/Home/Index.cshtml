@{
    ViewData["Title"] = "Home Page";

}
@model YoYoTestDemo.ViewModel.HomeViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h1 class="display-4">WELCOME TO <br /> YO-YO-TEST</h1>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <div id="controls" class="text-center" hidden>
                <button id="playBtn" onclick="start();" type="button" class="btn btn-primary btn-lg rounded-pill mainBtn"><i class="fa fa-play" aria-hidden="true"></i></button>
                <button id="pauseBtn" onclick="stop();" type="button" class="btn btn-primary btn-lg rounded-pill mainBtn"><i class="fa fa-pause" aria-hidden="true"></i></button>
                @*<h3 class="">Progress, Level, Speed </h3>*@
                <br />
                <br />
                <p>Level <span id="currentShuttleLevelNumber">-</span> </p>
                <p>Shuttle <span id="currentShuttleNumber">-</span> </p>
                <p><span id="currentShuttleSpeed">0</span> km/hr</p>
                <p>
                    <div class="progress" style="height: 10px;">
                        <div id="speed-level-progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </p>
            </div>
        </div>
    </div>
    <br />
    <div class="row text-center">
        <div class="col">
            <p>Next Shuttle</p>
            <p id="cdTimer">__:__</p>

        </div>
        <div class="col">
            <p>Total Time</p>
            <p id="timer" class="">__:__</p>

        </div>
        <div class="col">
            <p>Distance</p>
            <p id="currentTotalDistance">00</p>

        </div>
    </div>

    <br />
    <div class="row">
        <div class="col">
            <p>Participants </p>
            <hr />
        </div>
    </div>
    @foreach (var item in Model.players)
    {
        <div class="row" id="player-@item.id">
            <div class="col-8">
                @item.name
            </div>
            <div class="col-2">
                <button id="warnBtnPlayer-@item.id" onclick='warnPlayer("Player-@item.id");' type="button" class="btn btn-outline-warning btn-sm rounded-pill">Warn</button>
            </div>
            <div class="col-2">
                <button id="stopBtnPlayer-@item.id" onclick='stopPlayer("Player-@item.id");' type="button" class="btn btn-outline-danger btn-sm rounded-pill">Stop</button>
            </div>
        </div>
        <br />

    }

</div>



